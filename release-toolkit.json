{
  "repository": {
    "repo": "h1-a",
    "owner": "omriLugasi"
  },
  "workspaces": [
    {
      "branch": "main",
      "folderPath": "src/a",
      "id": "main",
      "plugins": [
        {
          "name": "github",
          "tagPattern": "{{tag}}-main",
          "releasePattern": "Main - {{release}}"
        },
        {
          "name": "npm",
          "dryRun": true
        },
        {
          "name": "npm:mirroring",
          "packageName": "@custom/my-mirroring-package-name",
          "pre": "yarn build-same-app-with-different-context",
          "dryRun": true
        }
      ]
    }
  ],
  "commitPatterns": [
    {
      "pattern": "^refactor\\(\\):",
      "upgrade": "major",
      "title": "Refeactor!"
    },
    {
      "pattern": "^feat\\(\\):",
      "upgrade": "minor",
      "title": "Features"
    },
    {
      "pattern": "^chore\\(\\):",
      "upgrade": "build",
      "title": "Chores"
    },
    {
      "pattern": "^ignore\\(\\):",
      "upgrade": "ignore"
    }
  ]
}
