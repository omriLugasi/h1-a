{
  "repository": {
    "repo": "h1-a",
    "owner": "omriLugasi"
  },
  "workspaces": [
    {
      "branch": "main",
      "folderPath": "src/a",
      "id": "new",
      "plugins": [
        {
          "name": "github",
          "tagPattern": "{{tag}}-new",
          "releasePattern": "New - {{release}}"
        },
        {
          "name": "npm",
          "dryRun": true
        }
      ]
    },
    {
      "branch": "main",
      "folderPath": "src/b",
      "id": "new-src-b",
      "plugins": [
        {
          "name": "github",
          "tagPattern": "v{{tag}}-new-b",
          "releasePattern": "New B - {{release}}"
        },
        {
          "name": "npm",
          "dryRun": true
        }
      ]
    }
  ],
  "commitPatterns": [
    {
      "pattern": "^refactor\\(\\):",
      "upgrade": "major",
      "title": "Refeactor!"
    },
    {
      "pattern": "^feat\\(\\):",
      "upgrade": "minor",
      "title": "Features"
    },
    {
      "pattern": "^chore\\(\\):",
      "upgrade": "build",
      "title": "Chores"
    },
    {
      "pattern": "^ignore\\(\\):",
      "upgrade": "ignore"
    }
  ]
}
